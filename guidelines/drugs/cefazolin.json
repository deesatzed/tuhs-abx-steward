  "class": "1st Generation Cephalosporin",
  "version": "3.0.0",
  "last_updated": "2025-10-08",

  "routes": ["IV", "IM"],
  "default_route": "IV",

  "contraindications": {
    "absolute": [
      "severe_cephalosporin_allergy",
      "severe_pcn_allergy_with_anaphylaxis"
    ],
    "relative": [
      "severe_renal_impairment"
    ],
    "note": "Contraindicated in severe cephalosporin allergy. Use caution with severe PCN allergy (cross-reactivity <1% but avoid if anaphylaxis)."
  },

  "allergy_considerations": {
    "mild_pcn_allergy": {
      "safe": true,
      "contraindicated": false,
      "note": "Safe with mild PCN allergy (cross-reactivity <1%). Avoid if history of anaphylaxis."
    },
    "severe_pcn_allergy": {
      "safe": false,
      "contraindicated": true,
      "note": "Contraindicated if PCN anaphylaxis. Use vancomycin or clindamycin instead."
    },
    "cephalosporin_allergy": {
      "safe": false,
      "contraindicated": true,
      "note": "Absolutely contraindicated. Use vancomycin instead."
    }
  },

  "pregnancy_category": "B",
  "pregnancy_safe": true,
  "pregnancy_notes": "Safe in all trimesters. Commonly used for surgical prophylaxis in pregnancy.",

  "renal_adjustment": {
    "required": true,
    "adjustments": {
      "CrCl_>50": {
        "dose": "Standard dose",
        "note": "No adjustment needed"
      },
      "CrCl_35_50": {
        "dose": "Full dose q8h â†’ q12h",
        "note": "Reduce dosing frequency"
      },
      "CrCl_11_34": {
        "dose": "50% of standard dose",
        "note": "Reduce dose by 50%"
      },
      "CrCl_<10": {
        "dose": "50% of standard dose q24h",
        "note": "Significantly reduce dose and frequency"
      }
    }
  },

  "dosing": {
